@{
    ViewBag.Title = "Home Page";
}

<section class="vh-80">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card">
                    <div class="card-body p-5">
                        <h3 class="text-center mb-4">To Do List</h3>
                        <form class="d-flex justify-content-center align-items-center mb-4">
                            <div class="form-outline flex-fill mr-3">
                                <input type="text" id="new-item" class="form-control" placeholder="New task..." aria-label="New task" />
                            </div>
                            <button type="submit" id="addBtn" class="btn btn-info ms-2">Add</button>
                        </form>
                        <ul class="checklist list-group mb-0 pl-0" id="checklist" role="group" aria-label="checkbox group"></ul>
                        <hr class="d-none"/>
                        <ul id="done-list" class="pl-0" role="group" aria-label="checkbox group"></ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <script type="text/javascript" src="~/Scripts/ToDoApp.js"></script>
}

@section styles{
    <link type="text/css" href="~/Styles/style.css" rel="stylesheet" />
}